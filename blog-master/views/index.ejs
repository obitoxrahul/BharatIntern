<%- include("partials/header")%>
<div class="ui main text container">
  <div class="ui huge header">Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
      <div class="item" style="display: flex; flex-wrap: wrap">
        <div class="image">
          <img src="<%= blog.image %>" alt="Image failed to load :/" />
        </div>
        <div class="content">
          <a href="/blogs/<%= blog._id %>" class="ui huge header"
            ><%=blog.title%></a
          >
        </div>
        <div class="meta">
          <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blog.body.substring(0,150)%> ...</p>
        </div>

        <div class="extra">
          <a
            class="ui floated secondary inverted button"
            href="/blogs/<%= blog._id %>"
            >Read More <i class="right chevron icon"></i
          ></a>
          <button type="button" class="ui floated secondary inverted button">
            Author Details
          </button>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<%- include("partials/footer")%>
